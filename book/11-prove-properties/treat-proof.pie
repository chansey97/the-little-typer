;; Prove that â€œconsing 'plattar onto two equal lists of treats produces equal lists of treats.â€
#lang pie

(claim Treat-Statement
  U)
(define Treat-Statement
  (Pi ((some-treats (List Atom))
       (more-treats (List Atom)))
    (-> (= (List Atom)
          some-treats
          more-treats)
      (= (List Atom)
        (:: 'plattar some-treats)
        (:: 'plattar more-treats)))))

(claim ::-plattar
  (-> (List Atom)
      (List Atom)))
(define ::-plattar
  (lambda (tasty-treats)
    (:: 'plattar tasty-treats)))

(claim treat-proof
  Treat-Statement)
(define treat-proof
  (lambda (some-treats more-treats)
    (lambda (treats=)
      (cong treats= ::-plattar))))

